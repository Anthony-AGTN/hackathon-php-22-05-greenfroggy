{% extends 'layout.html.twig' %}

{% block content %}

	<div class="mainContainerPresent">
		<div class="headerContainer">
			<form method="post">
				<input type="text" name="city" id="searchbar" class="form-control searchBar" placeholder="🔍 Lieu">
			</form>
			<ul class="selectTime">
				<li>
					<a href="#">aujourd'hui</a>
				</li>
				<li>
					<a href="#">dans 50 ans</a>
				</li>
			</ul>
		</div>

		<div class="mainPage">


			<div class="weatherCard">
				<p class="date">{{ "now"|date("d/m/Y, H:i") }}</p>
				<p class="city">{{ weathers.city.name }}, France</p>
				<p class="nightDayTemp">Jour : {{ weathers.forecast.0.tmax }}°C - Nuit : {{ weathers.forecast.0.tmin}}°C</p>
				<div class="tempAndSun">
					<p class="temperature">{{weathers.forecast.0.tmax}}°C</p>
					
					<img class="sunPic" src="{{weatherPic}}">
				</div>
				<p class="feltTemperature">Température ressentie : {{ weathers.forecast.0.tmax }}°C</p>
			</div>
		</div>
	</div>
{% endblock %}
