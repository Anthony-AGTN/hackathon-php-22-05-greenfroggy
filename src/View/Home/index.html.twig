{% extends 'layout.html.twig' %}

{% block content %}

	<div class="mainContainerPresent">
		<div class="headerContainer">
			<form method="post">
				<input type="text" name="city" id="searchbar" class="form-control searchBar" placeholder="🔍 Lieu">
			</form>
			<ul class="selectTime">
				<li>
					<a href="#">aujourd'hui</a>
				</li>
				<li>
					<a href="#">dans 50 ans</a>
				</li>
			</ul>
		</div>

		<div class="mainPage">
			<div class="weatherCard">
				<p class="date">{{ "now"|date("d/m/Y, H:i") }}</p>
				<p class="nightDayTemp">Jour : 29°C - Nuit : 16°C</p>
				<div class="tempAndSun">
					<p class="temperature">29°C</p>
					<img class="sunPic" src="/assets/images/Icons/sun.png">
				</div>
				<p class="feltTemperature">Température ressentie : 32°C</p>
			</div>
		</div>
	</div>
{% endblock %}
