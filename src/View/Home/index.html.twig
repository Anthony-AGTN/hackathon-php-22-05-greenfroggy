{% extends 'layout.html.twig' %}

{% block content %}

	<div class="mainContainerPresent">
		<div class="headerContainer">
			<form method="post">
				<input type="text" name="city" id="searchbar" class="form-control searchBar" placeholder="🔍 Lieu">
			</form>
			<ul class="selectTime">
				<li>
					<a href="/">aujourd'hui</a>
				</li>
				<li>
					<a href="/future">dans 50 ans</a>
				</li>
			</ul>
		</div>


		<div class="selector2"></div>

		<div class="mainPage">
			<div class="weatherCard">
				<p class="date darktext">{{ "now"|date("d/m/Y, H:i") }}</p>
				<p class="city darktext">{{ weathers.city.name }}, France</p>
				<p class="nightDayTemp darktext">Mini : {{ weathers.forecast.0.tmin }}°C - Maxi : {{ weathers.forecast.0.tmax }}°C</p>
				<div class="tempAndSun">
					<p class="temperature darktext">{{ actualTemp }}°C</p>
					
					<img class="sunPic" src="{{weatherPic}}">
				</div>
				<p class="feltTemperature darktext">Température ressentie : {{ weathers.forecast.0.tmax }}°C</p>

			</div>
		</div>
	</div>
{% endblock %}
